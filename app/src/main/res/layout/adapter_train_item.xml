<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent" >

    <RelativeLayout
        android:id="@+id/rl_item_bg_isread"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/offset_medium"
        android:layout_marginRight="@dimen/offset_less"
        android:layout_marginTop="@dimen/offset_micro"
        android:background="@drawable/icon_unread_orange"
        android:paddingBottom="@dimen/list_item_notice_rl_padB" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_adapter_base_item_subject"
            android:layout_alignRight="@+id/tv_adapter_base_item_subject"
            android:layout_below="@+id/tv_adapter_base_item_subject"
            android:gravity="center_vertical"
            android:paddingBottom="@dimen/offset_small"
            android:paddingLeft="@dimen/offset_micro"
            android:paddingRight="@dimen/offset_micro"
            android:paddingTop="@dimen/offset_small" >

            <TextView
                android:id="@+id/bumen_and_date_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:ellipsize="end"
                android:gravity="center_vertical|left"
                android:singleLine="true"
                android:textColor="@color/color_list_item_text_time"
                android:textSize="@dimen/text_size_small" />

            <RatingBar
                android:id="@+id/pingfen_ratingbar"
                style="@style/foodRatingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:layout_marginTop="2dp"
                android:isIndicator="true"
                android:numStars="5"
                android:stepSize="0.5" />

            <TextView
                android:id="@+id/pingfenrenshu_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|right"
                android:textSize="12sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/img_train_pic"
            android:layout_width="@dimen/list_item_train_pic_width"
            android:layout_height="@dimen/list_item_train_pic_height"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/itme_margin_top"
            android:scaleType="fitXY"
            android:src="@drawable/pic_train_item" />

        <TextView
            android:id="@+id/tv_adapter_base_item_subject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/img_train_pic"
            android:layout_alignRight="@+id/img_train_pic"
            android:layout_below="@+id/img_train_pic"
            android:background="@android:color/transparent"
            android:paddingTop="@dimen/offset_less"
            android:text=""
            android:textColor="@color/color_trian_item_dpt"
            android:textSize="@dimen/text_size_less" />

        <ImageView
            android:id="@+id/iv_adapter_base_item_top"
            android:layout_width="@dimen/list_item_top_pic_size"
            android:layout_height="@dimen/list_item_top_pic_size"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="@dimen/list_item_train_top_marginR"
            android:layout_marginTop="@dimen/list_item_notice_top_marginB"
            android:scaleType="fitXY"
            android:src="@drawable/icon_item_top" />
    </RelativeLayout>

</RelativeLayout>