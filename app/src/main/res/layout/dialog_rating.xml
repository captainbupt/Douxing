<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingBottom="@dimen/offset_large"
    android:paddingLeft="@dimen/offset_xxlarge"
    android:paddingRight="@dimen/offset_xxlarge"
    android:paddingTop="@dimen/offset_large">

    <RatingBar
        android:id="@+id/rb_dialog_rating"
        style="@style/DialogRatingBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:stepSize="1" />

    <TextView
        android:id="@+id/tv_dialog_rating_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/offset_medium"
        android:text="@string/dialog_rating_title_not_rated"
        android:textColor="@color/color_text_black"
        android:textSize="@dimen/text_size_xlarge" />

    <TextView
        android:id="@+id/tv_dialog_rating_tips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/offset_less"
        android:textColor="@color/color_orange"
        android:textSize="@dimen/text_size_medium" />

    <LinearLayout
        android:id="@+id/ll_dialog_rating_not_rated"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/offset_medium"
        android:gravity="center">

        <TextView
            android:id="@+id/tv_dialog_rating_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/background_button_enable_red"
            android:paddingBottom="@dimen/offset_less"
            android:paddingLeft="@dimen/offset_medium"
            android:paddingRight="@dimen/offset_medium"
            android:paddingTop="@dimen/offset_less"
            android:text="@string/dialog_rating_cancel"
            android:textColor="@color/color_button_text_red"
            android:textSize="@dimen/text_size_less" />

        <TextView
            android:id="@+id/btn_dialog_rating_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/offset_large"
            android:layout_weight="1"
            android:background="@drawable/background_button_disable"
            android:enabled="false"
            android:paddingBottom="@dimen/offset_less"
            android:paddingLeft="@dimen/offset_medium"
            android:paddingRight="@dimen/offset_medium"
            android:paddingTop="@dimen/offset_less"
            android:text="@string/dialog_rating_confirm"
            android:textColor="@color/color_white"
            android:textSize="@dimen/text_size_less" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_dialog_rating_rated"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/offset_medium"
        android:gravity="center"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_dialog_rating_rated"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/background_button_enable_blue"
            android:paddingBottom="@dimen/offset_less"
            android:paddingLeft="@dimen/offset_large"
            android:paddingRight="@dimen/offset_large"
            android:paddingTop="@dimen/offset_less"
            android:text="@string/dialog_rating_rated"
            android:textColor="@color/color_button_text_blue"
            android:textSize="@dimen/text_size_less" />

    </LinearLayout>

</LinearLayout>