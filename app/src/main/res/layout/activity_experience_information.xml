<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/background_splash"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/offset_large"
            android:layout_marginRight="@dimen/offset_large"
            android:background="@drawable/background_corner_radius_medium_f8ffffff"
            android:orientation="vertical">

            <TextView
                android:id="@+id/cancel_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:padding="@dimen/offset_less"
                android:text="@string/experience_information_cancel"
                android:textColor="@color/color_text_blue"
                android:textSize="@dimen/text_size_less"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/login_logo"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:padding="@dimen/offset_medium"
                android:text="@string/experience_information_title"
                android:textColor="@color/color_text_blue"
                android:textSize="@dimen/text_size_large"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/offset_medium"
                android:layout_marginRight="@dimen/offset_medium"
                android:layout_marginTop="@dimen/offset_less"
                android:background="@drawable/background_border_radius_small_grey_transparent"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/offset_small"
                android:paddingTop="@dimen/offset_small">

                <ImageView
                    android:layout_width="@dimen/icon_size_tiny"
                    android:layout_height="@dimen/icon_size_tiny"
                    android:layout_marginLeft="@dimen/offset_less"
                    android:layout_marginRight="@dimen/offset_less"
                    android:padding="@dimen/offset_small"
                    android:scaleType="fitCenter"
                    android:src="@drawable/icon_experience_information_name"/>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/color_border_grey"/>

                <EditText
                    android:id="@+id/name_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint="@string/experience_information_name"
                    android:padding="@dimen/offset_small"
                    android:singleLine="true"
                    android:textColor="@color/color_text_black"
                    android:textColorHint="@color/color_border_grey"
                    android:textSize="@dimen/text_size_medium"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/offset_medium"
                android:layout_marginRight="@dimen/offset_medium"
                android:layout_marginTop="@dimen/offset_medium"
                android:background="@drawable/background_border_radius_small_grey_transparent"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/offset_small"
                android:paddingTop="@dimen/offset_small">

                <ImageView
                    android:layout_width="@dimen/icon_size_tiny"
                    android:layout_height="@dimen/icon_size_tiny"
                    android:layout_marginLeft="@dimen/offset_less"
                    android:layout_marginRight="@dimen/offset_less"
                    android:padding="@dimen/offset_small"
                    android:scaleType="fitCenter"
                    android:src="@drawable/icon_experience_information_phone"/>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/color_border_grey"/>

                <EditText
                    android:id="@+id/phone_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint="@string/experience_information_phone"
                    android:inputType="number"
                    android:padding="@dimen/offset_small"
                    android:singleLine="true"
                    android:textColor="@color/color_text_black"
                    android:textColorHint="@color/color_border_grey"
                    android:textSize="@dimen/text_size_medium"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/offset_medium"
                android:layout_marginRight="@dimen/offset_medium"
                android:layout_marginTop="@dimen/offset_medium"
                android:background="@drawable/background_border_radius_small_grey_transparent"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/offset_small"
                android:paddingTop="@dimen/offset_small">

                <ImageView
                    android:layout_width="@dimen/icon_size_tiny"
                    android:layout_height="@dimen/icon_size_tiny"
                    android:layout_marginLeft="@dimen/offset_less"
                    android:layout_marginRight="@dimen/offset_less"
                    android:padding="@dimen/offset_small"
                    android:scaleType="fitCenter"
                    android:src="@drawable/icon_experience_information_company"/>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/color_border_grey"/>

                <EditText
                    android:id="@+id/company_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint="@string/experience_information_company"
                    android:padding="@dimen/offset_small"
                    android:singleLine="true"
                    android:textColor="@color/color_text_black"
                    android:textColorHint="@color/color_border_grey"
                    android:textSize="@dimen/text_size_medium"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/offset_medium"
                android:layout_marginRight="@dimen/offset_medium"
                android:layout_marginTop="@dimen/offset_medium"
                android:background="@drawable/background_border_radius_small_grey_transparent"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/offset_small"
                android:paddingTop="@dimen/offset_small">

                <ImageView
                    android:layout_width="@dimen/icon_size_tiny"
                    android:layout_height="@dimen/icon_size_tiny"
                    android:layout_marginLeft="@dimen/offset_less"
                    android:layout_marginRight="@dimen/offset_less"
                    android:padding="@dimen/offset_small"
                    android:scaleType="fitCenter"
                    android:src="@drawable/icon_experience_information_job"/>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/color_border_grey"/>

                <EditText
                    android:id="@+id/job_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint="@string/experience_information_job"
                    android:padding="@dimen/offset_small"
                    android:singleLine="true"
                    android:textColor="@color/color_text_black"
                    android:textColorHint="@color/color_border_grey"
                    android:textSize="@dimen/text_size_medium"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/offset_large"
                android:layout_marginLeft="@dimen/offset_medium"
                android:layout_marginRight="@dimen/offset_medium"
                android:layout_marginTop="@dimen/offset_large"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/back_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/offset_medium"
                    android:layout_weight="1"
                    android:background="@drawable/background_button_disable"
                    android:gravity="center"
                    android:padding="@dimen/offset_lless"
                    android:text="&lt;"
                    android:textColor="@color/color_white"
                    android:textSize="@dimen/text_size_medium"/>

                <TextView
                    android:id="@+id/confirm_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:background="@drawable/background_button_disable"
                    android:gravity="center"
                    android:padding="@dimen/offset_lless"
                    android:text="@string/experience_information_confirm"
                    android:textColor="@color/color_white"
                    android:textSize="@dimen/text_size_medium"/>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/tip_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/offset_medium"
            android:gravity="center"
            android:textSize="@dimen/text_size_medium"/>

    </LinearLayout>
</FrameLayout>