<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:paddingLeft="@dimen/offset_lless"
    android:paddingRight="@dimen/offset_lless"
    android:paddingTop="@dimen/offset_lless" >

    <!-- 同事圈的列表 item -->

    <LinearLayout
        android:id="@+id/top_linear"
        android:layout_width="match_parent"
        android:layout_height="@dimen/around_icon_head_size"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/wenda_touxiang_img"
            android:layout_width="@dimen/around_icon_head_size"
            android:layout_height="@dimen/around_icon_head_size"
            android:scaleType="fitXY"
            android:src="@drawable/icon_user_detail_default_head" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/around_icon_head_size"
            android:layout_marginLeft="@dimen/offset_less"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/name_lv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/wenda_name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_blue"
                    android:textSize="@dimen/text_size_less" />

                <TextView
                    android:id="@+id/tv_user_center_top_level"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/background_lv_fir"
                    android:paddingBottom="1dp"
                    android:paddingLeft="2dp"
                    android:paddingRight="2dp"
                    android:paddingTop="1dp"
                    android:textColor="#ffffff"
                    android:textSize="12sp" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/rl_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp" >

                <TextView
                    android:id="@+id/wenda_data"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_list_item_text_time"
                    android:textSize="@dimen/text_size_less" />

                <TextView
                    android:id="@+id/replay_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@id/wenda_data"
                    android:textColor="@color/color_list_item_text_time"
                    android:textSize="@dimen/text_size_less" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/wenda_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/top_linear"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="@dimen/offset_lless"
        android:lineSpacingExtra="@dimen/offset_small"
        android:textColor="@color/color_question_share_content"
        android:textSize="@dimen/text_size_less" />

    <TextView
        android:id="@+id/show_all_content_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/wenda_content"
        android:layout_below="@id/wenda_content"
        android:text="显示全文"
        android:textColor="@color/color_blue"
        android:textSize="@dimen/text_size_less"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/wenda_picture_img"
        android:layout_width="@dimen/icon_size_xlarge"
        android:layout_height="@dimen/icon_size_xlarge"
        android:layout_alignLeft="@id/wenda_content"
        android:layout_below="@id/show_all_content_tv"
        android:background="@android:color/transparent"
        android:scaleType="centerCrop"
        android:visibility="gone" />

    <TextView
        android:id="@+id/shenliuliang_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/wenda_picture_img"
        android:text="当前为省流量模式"
        android:textColor="@color/color_grey"
        android:textSize="@dimen/text_size_less"
        android:visibility="gone" />

    <View
        android:id="@+id/view_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/shenliuliang_tv"
        android:layout_marginTop="@dimen/offset_small"
        android:background="@color/color_edit_line" />

</RelativeLayout>