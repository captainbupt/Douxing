<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_layout_bg"
    android:orientation="vertical" >

    <include
        android:id="@+id/action"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/actionbar" />

    <RelativeLayout
        android:id="@+id/rl_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bg_top_my_exam_h"
        android:layout_below="@+id/action"
        android:background="@drawable/bg_usercneter"
        android:orientation="vertical"
        android:paddingLeft="@dimen/offset_small"
        android:paddingRight="@dimen/offset_small" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:padding="@dimen/offset_less"
            android:text="@string/ucneter_text_pingJunFen"
            android:textColor="@android:color/white" />

        <RelativeLayout
            android:id="@+id/score_rank"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp" >

            <TextView
                android:id="@+id/tv_my_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:textColor="@android:color/white"
                android:textSize="@dimen/user_center_textSize_top_score" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/score_rank"
            android:layout_marginTop="-10dp"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/geren_rank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_medium" />

            <TextView
                android:id="@+id/tv_my_exam_rank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_medium" />
        </LinearLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_top"
        android:background="@android:color/transparent"
        android:gravity="center"
        android:paddingBottom="@dimen/my_examOrStudy_center_tv_padB"
        android:paddingTop="@dimen/my_examOrStudy_center_tv_padT"
        android:text="@string/myExam_YiKaoKeMu"
        android:textColor="@color/color_blue"
        android:textSize="@dimen/text_size_large" />
    
    <com.handmark.pulltorefresh.library.PullToRefreshListView
        android:layout_below="@id/textView3"
        android:id="@+id/PullToRefreshListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@android:color/transparent"
        android:scrollbars="none"
        android:visibility="visible" 
        /> 

    <include
        android:layout_alignParentBottom="true"
        layout="@layout/bottom_layout_comment" />

</RelativeLayout>