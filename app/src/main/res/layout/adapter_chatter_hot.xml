<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/text_size_less"
    android:paddingLeft="@dimen/text_size_medium"
    android:paddingRight="@dimen/text_size_medium"
    android:paddingTop="@dimen/text_size_less">

    <ImageView
        android:id="@+id/head_image_view"
        android:layout_width="@dimen/icon_head_size_middle"
        android:layout_height="@dimen/icon_head_size_middle"
        android:scaleType="centerInside"
        android:src="@drawable/icon_user_detail_default_head" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/name_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/color_text_black"
            android:textSize="@dimen/text_size_medium" />

        <TextView
            android:id="@+id/data_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/offset_small"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/color_text_grey"
            android:textSize="@dimen/text_size_less" />
    </LinearLayout>

    <com.badou.mworking.widget.LevelTextView
        android:id="@+id/level_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/offset_small"
        android:textColor="#ffffff"
        android:textSize="@dimen/text_size_small" />

    <ImageView
        android:id="@+id/rank_image_view"
        android:layout_width="@dimen/around_icon_hot_rank_width"
        android:layout_height="wrap_content"
        android:scaleType="centerInside" />

    <TextView
        android:id="@+id/rank_text_view"
        android:layout_width="@dimen/around_icon_hot_rank_width"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/color_text_black"
        android:textSize="@dimen/text_size_medium" />

</LinearLayout>