<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="@dimen/offset_medium">

    <TextView
        android:id="@+id/index_text_view"
        android:layout_width="@dimen/icon_size_tiny"
        android:layout_height="@dimen/icon_size_tiny"
        android:layout_margin="@dimen/offset_less"
        android:background="@drawable/background_entry_operation_round_index"
        android:gravity="center"
        android:textColor="@color/color_text_grey"
        android:textSize="@dimen/text_size_large" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/text_size_less"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/subject_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/color_text_black"
            android:textSize="@dimen/text_size_medium" />

        <TextView
            android:id="@+id/content_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/color_text_grey"
            android:textSize="@dimen/text_size_less" />

    </LinearLayout>

    <ImageView
        android:id="@+id/check_image_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/cb_entry_operation_unchecked" />
</LinearLayout>