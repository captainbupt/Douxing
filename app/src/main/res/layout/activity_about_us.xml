<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bg_grey"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/offset_less"
            android:layout_marginTop="@dimen/offset_less"
            android:background="@color/color_white"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/offset_less">

            <ImageView
                android:layout_width="@dimen/about_us_icon_logo_width"
                android:layout_height="@dimen/about_us_icon_logo_height"
                android:contentDescription="@string/app_name"
                android:scaleType="centerInside"
                android:src="@drawable/login_logo" />

            <TextView
                android:id="@+id/tv_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/offset_micro"
                android:textColor="@color/color_text_grey"
                android:textSize="@dimen/text_size_large" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_white"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_check_update"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/background_white_grey"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/offset_less">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/about_us_check_update"
                    android:textColor="@color/color_text_black"
                    android:textSize="@dimen/text_size_large" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/icon_user_center_forward" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="@dimen/offset_less"
                android:layout_marginRight="@dimen/offset_less"
                android:background="@color/color_border_grey" />

            <LinearLayout
                android:id="@+id/ll_clear_cache"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/background_white_grey"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/offset_less">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/about_us_clear_cache"
                    android:textColor="@color/color_text_black"
                    android:textSize="@dimen/text_size_large" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/icon_user_center_forward" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="@dimen/offset_less"
                android:layout_marginRight="@dimen/offset_less"
                android:background="@color/color_border_grey" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/background_white_grey"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/offset_less">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/about_us_push"
                    android:textColor="@color/color_text_black"
                    android:textSize="@dimen/text_size_large" />

                <CheckBox
                    android:id="@+id/cb_push"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/selector_pic_show"
                    android:button="@null" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="@dimen/offset_less"
                android:layout_marginRight="@dimen/offset_less"
                android:background="@color/color_border_grey" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/background_white_grey"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/offset_less">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/about_us_saving_network"
                    android:textColor="@color/color_text_black"
                    android:textSize="@dimen/text_size_large" />

                <CheckBox
                    android:id="@+id/cb_save"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/selector_pic_show"
                    android:button="@null" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/offset_small"
            android:background="@color/color_white"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_faq"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/background_white_grey"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/offset_less">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/about_us_frequent_question"
                    android:textColor="@color/color_text_black"
                    android:textSize="@dimen/text_size_large" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/icon_user_center_forward" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="@dimen/offset_less"
                android:layout_marginRight="@dimen/offset_less"
                android:background="@color/color_border_grey" />

            <LinearLayout
                android:id="@+id/ll_contact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/background_white_grey"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/offset_less">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/title_name_lianXin"
                    android:textColor="@color/color_text_black"
                    android:textSize="@dimen/text_size_large" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/icon_user_center_forward" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</ScrollView>