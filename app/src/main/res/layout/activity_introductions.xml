<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_welcome_4" >

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_introduction"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:flipInterval="30"
        android:persistentDrawingCache="animation"
         />

    <Button
        android:id="@+id/btn_introduction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/welcome_btn_marginB"
        android:background="@drawable/btn_bg_welcome"
        android:paddingLeft="@dimen/offset_xxlarge"
        android:paddingRight="@dimen/offset_xxlarge"
        android:paddingTop="@dimen/offset_less"
        android:paddingBottom="@dimen/offset_less"
        android:textColor="@color/color_white"
        android:textSize="@dimen/text_size_xlarge"
        android:visibility="visible" 
         />

    <RadioGroup
        android:id="@+id/rg_introduction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/offset_large"
        android:orientation="horizontal"
        android:visibility="gone" >

        <RadioButton
            android:id="@+id/rb_welcome_1"
            android:layout_width="@dimen/icon_size_main_grid_rb"
            android:layout_height="@dimen/icon_size_main_grid_rb"
            android:background="@drawable/background_rb_welcome"
            android:button="@null"
            android:checked="true"
            android:clickable="false" />

        <RadioButton
            android:id="@+id/rb_welcome_2"
            android:layout_width="@dimen/icon_size_main_grid_rb"
            android:layout_height="@dimen/icon_size_main_grid_rb"
            android:layout_marginLeft="@dimen/offset_less"
            android:background="@drawable/background_rb_welcome"
            android:button="@null"
            android:clickable="false" />

        <RadioButton
            android:id="@+id/rb_welcome_3"
            android:layout_width="@dimen/icon_size_main_grid_rb"
            android:layout_height="@dimen/icon_size_main_grid_rb"
            android:layout_marginLeft="@dimen/offset_less"
            android:background="@drawable/background_rb_welcome"
            android:button="@null"
            android:clickable="false" />

        <RadioButton
            android:id="@+id/rb_welcome_4"
            android:layout_width="@dimen/icon_size_main_grid_rb"
            android:layout_height="@dimen/icon_size_main_grid_rb"
            android:layout_marginLeft="@dimen/offset_less"
            android:background="@drawable/background_rb_welcome"
            android:button="@null"
            android:clickable="false" />
    </RadioGroup>

</RelativeLayout>