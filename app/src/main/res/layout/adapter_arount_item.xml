<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:paddingLeft="@dimen/offset_lless"
    android:paddingRight="@dimen/offset_lless"
    android:paddingTop="@dimen/offset_lless" >

    <!-- 同事圈的列表 item -->

    <ImageView
        android:id="@+id/ivAdapterQuestionShareIcon"
        android:layout_width="@dimen/around_icon_head_size"
        android:layout_height="@dimen/around_icon_head_size"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:scaleType="fitXY"
        android:src="@drawable/user_detail_head_icon" />

    <LinearLayout
        android:id="@+id/name_lv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/ivAdapterQuestionShareIcon"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tvQuestionShareName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/offset_less"
            android:textColor="@color/color_blue"
            android:textSize="@dimen/text_size_less" />

        <TextView
            android:id="@+id/lv_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@drawable/background_lv_fir"
            android:paddingBottom="1dp"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:paddingTop="1dp"
            android:textColor="#ffffff"
            android:textSize="12sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvQuestionShareContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/name_lv"
        android:layout_below="@id/name_lv"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="@dimen/offset_micro"
        android:lineSpacingExtra="@dimen/offset_small"
        android:textColor="@color/color_question_share_content"
        android:textSize="@dimen/text_size_less" 
        />

    <TextView
        android:id="@+id/show_all_content_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/tvQuestionShareContent"
        android:layout_below="@id/tvQuestionShareContent"
        android:text="显示全文"
        android:visibility="gone"
        android:textColor="@color/color_blue"
        android:textSize="@dimen/text_size_less" />

    <RelativeLayout
        android:id="@+id/QuestionShare_relay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/tvQuestionShareContent"
        android:layout_below="@id/show_all_content_tv" >

        <ImageView
            android:id="@+id/imgQuestionShare"
            android:layout_width="@dimen/icon_size_xlarge"
            android:layout_height="@dimen/icon_size_xlarge"
            android:background="@android:color/transparent"
            android:scaleType="centerCrop"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/tongshiquan_shiping_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/tongshiquan_shiing"
            android:scaleType="centerCrop"
            android:visibility="gone" />
        
       <TextView
            android:id="@+id/shenliuliang_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="当前为省流量模式"
            android:textColor="@color/color_grey"
            android:textSize="@dimen/text_size_less"
            android:visibility="gone"
             />
        
    </RelativeLayout>
    
    <RelativeLayout
        android:id="@+id/rl_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/tvQuestionShareContent"
        android:layout_alignParentRight="true"
        android:layout_below="@id/QuestionShare_relay" >

        <TextView
            android:id="@+id/tvQuestionShareDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/layout_credit"
            android:layout_alignParentLeft="true"
            android:gravity="bottom"
            android:textColor="@color/color_list_item_text_time"
            android:textSize="@dimen/text_size_less" />

        <LinearLayout
            android:id="@+id/layout_credit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/ll_comment"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <CheckBox
                android:id="@+id/chb_credit"
                android:layout_width="@dimen/around_icon_reply_width"
                android:layout_height="@dimen/around_icon_reply_height"
                android:layout_marginLeft="@dimen/offset_small"
                android:background="@drawable/selector_around_credit"
                android:button="@null"
                android:checked="false"
                android:clickable="false"
                android:focusable="false" />

            <TextView
                android:id="@+id/tv_credit_num"
                android:layout_width="@dimen/tongshiquan_zan_w"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center"
                android:paddingBottom="@dimen/tongShiQuan_zan_padding_h"
                android:paddingRight="@dimen/offset_micro"
                android:paddingTop="@dimen/tongShiQuan_zan_padding_h"
                android:singleLine="true"
                android:text="0"
                android:textColor="@color/color_black"
                android:textSize="@dimen/text_size_less" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="@dimen/around_icon_reply_width"
                android:layout_height="@dimen/around_icon_reply_height"
                android:layout_marginLeft="@dimen/offset_small"
                android:background="@drawable/pinglun"
                android:scaleType="centerInside"
                android:visibility="visible" />

            <TextView
                android:id="@+id/tvQuestionShareNums"
                android:layout_width="@dimen/tongshiquan_zan_w"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingBottom="@dimen/tongShiQuan_zan_padding_h"
                android:paddingRight="@dimen/offset_micro"
                android:paddingTop="@dimen/tongShiQuan_zan_padding_h"
                android:singleLine="true"
                android:text="0"
                android:textColor="@color/color_black"
                android:textSize="@dimen/text_size_less" />
        </LinearLayout>
    </RelativeLayout>

    <View
        android:id="@+id/view_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/rl_time"
        android:layout_marginTop="@dimen/offset_small"
        android:background="@color/color_edit_line" />

</RelativeLayout>