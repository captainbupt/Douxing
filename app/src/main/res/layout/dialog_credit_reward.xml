<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_corner_radius_small_ffffffff"
    android:minWidth="@dimen/dialog_min_width"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:padding="@dimen/offset_large"
        android:text="@string/dialog_credit_reward_title"
        android:textColor="@color/color_text_black"
        android:textSize="@dimen/text_size_login_error_tip"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/offset_medium">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/offset_medium"
            android:src="@drawable/credit_reward"/>

        <TextView
            android:id="@+id/credit_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+"
            android:textColor="@color/color_text_black"
            android:textSize="@dimen/text_size_login_error_tip"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_border_grey"/>

    <Button
        android:id="@+id/confirm_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/background_button_dialog_credit_reward"
        android:padding="@dimen/offset_medium"
        android:text="@string/dialog_credit_reward_confirm"
        android:textColor="#55acee"
        android:textSize="@dimen/text_size_login_error_button"/>

</LinearLayout>