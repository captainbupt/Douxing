<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_layout_bg"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/offset_less"
            android:text="@string/comment_all"
            android:textColor="@color/color_text_grey"
            android:textSize="@dimen/text_size_large" />

        <TextView
            android:id="@+id/tv_comment_Num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/color_blue"
            android:textSize="@dimen/text_size_large" />
    </LinearLayout>
    
    <com.handmark.pulltorefresh.library.PullToRefreshListView
        android:id="@+id/ptrlv_comments"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@null"/>
    
     <ImageView
        android:id="@+id/tishi_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/no_comment"
        android:visibility="gone"
        />

    <include 
        layout="@layout/layout_send_msg" 
        />

</RelativeLayout>