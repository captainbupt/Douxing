<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_layout_bg" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/layout_bottom"
        android:layout_alignParentTop="true"
        android:orientation="vertical" >

        <include
            android:id="@+id/title"
            layout="@layout/actionbar" />

        <fragment
            android:id="@+id/map"
            android:layout_width="match_parent"
            android:layout_height="@dimen/sign_top_pic_h"
            class="com.baidu.mapapi.map.SupportMapFragment" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/offset_medium"
                    android:text="@string/sign_in_task_descr"
                    android:textColor="@color/color_sign_text"
                    android:textSize="@dimen/text_size_sign_task_tips" />

                <TextView
                    android:id="@+id/tvSignTaskDescrb"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/sgin_text_marginL"
                    android:layout_marginTop="@dimen/offset_micro"
                    android:text=""
                    android:textSize="@dimen/text_size_sign_task_info" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/offset_micro"
                    android:gravity="center_vertical"
                    android:text="@string/sign_in_task_add"
                    android:textColor="@color/color_sign_text"
                    android:textSize="@dimen/text_size_sign_task_tips" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/sgin_text_marginL"
                    android:layout_marginTop="@dimen/offset_micro"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/ivSignLocated"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/sign"
                        android:scaleType="centerInside" />

                    <TextView
                        android:id="@+id/tvSignTaskAdd"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/offset_small"
                        android:textSize="@dimen/text_size_sign_task_info" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/offset_small"
                    android:text="@string/sign_time"
                    android:textColor="@color/color_sign_text"
                    android:textSize="@dimen/text_size_sign_task_tips" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/sgin_text_marginL"
                    android:layout_marginTop="@dimen/offset_micro"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/ivSignLocated"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/sign_time"
                        android:scaleType="centerInside" />

                    <TextView
                        android:id="@+id/tvSignInTime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/offset_small"
                        android:textSize="@dimen/text_size_sign_task_info" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_camrea"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/sign_ChangJing"
                        android:textColor="@color/color_sign_text"
                        android:textSize="@dimen/text_size_sign_task_tips" />

                    <RelativeLayout
                        android:id="@+id/rl_bottom"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="6dp" >

                        <ImageView
                            android:id="@+id/iv_question_image"
                            android:layout_width="@dimen/around_icon_question_image"
                            android:layout_height="@dimen/around_icon_question_image"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="16dp"
                            android:background="@drawable/icon_question_camera"
                            android:padding="@dimen/offset_less"
                            android:scaleType="centerCrop" />

                    </RelativeLayout>
                </LinearLayout>
                
                <ImageView 
                    android:id = "@+id/show_loc_img"
                    android:layout_width="@dimen/around_icon_question_image"
            		android:layout_height="@dimen/around_icon_question_image"
                    android:scaleType="centerCrop"
                    android:layout_gravity="center_horizontal"
                    />
                
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/layout_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/llSignSignOrIgnor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/llSignConfirm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/offset_lless"
                android:layout_marginLeft="@dimen/offset_lless"
                android:layout_marginRight="@dimen/offset_lless"
                android:layout_marginTop="@dimen/offset_lless"
                android:background="@drawable/btn_bg_blue"
                android:gravity="center"
                android:padding="@dimen/offset_medium"
                android:text="@string/sign_task_button_sign"
                android:textColor="@color/color_white"
                android:textSize="@dimen/text_size_large"
                android:visibility="visible" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvSignTaskPassed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/offset_lless"
            android:layout_marginLeft="@dimen/offset_lless"
            android:layout_marginRight="@dimen/offset_lless"
            android:layout_marginTop="@dimen/offset_lless"
            android:background="@color/color_grey"
            android:gravity="center"
            android:padding="@dimen/offset_medium"
            android:text="@string/sign_task_passed"
            android:textColor="@color/color_white"
            android:textSize="@dimen/text_size_sign_task_tips"
            android:visibility="gone" />

        <TextView
            android:id="@+id/llSignSmile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/offset_lless"
            android:layout_marginLeft="@dimen/offset_lless"
            android:layout_marginRight="@dimen/offset_lless"
            android:layout_marginTop="@dimen/offset_lless"
            android:background="@drawable/btn_bg_orange"
            android:gravity="center"
            android:padding="@dimen/offset_medium"
            android:text="@string/sign_task_finished"
            android:textColor="@color/color_white"
            android:textSize="@dimen/text_size_sign_task_tips"
            android:visibility="gone" />
    </FrameLayout>

</RelativeLayout>