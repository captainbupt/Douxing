<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:myattr="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_light_grey"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="@dimen/offset_small">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/content_image_view"
        android:layout_width="@dimen/icon_size_small"
        android:layout_height="@dimen/icon_size_small"
        myattr:actualImageScaleType="centerCrop"
        myattr:placeholderImage="@drawable/icon_chatter_url_default"
        myattr:placeholderImageScaleType="centerCrop"/>

    <com.badou.mworking.widget.EllipsizeTextView
        android:id="@+id/content_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/offset_small"
        android:textColor="@color/color_text_black"
        android:textSize="@dimen/text_size_medium"/>
</LinearLayout>