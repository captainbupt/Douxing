<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:baselineAligned="false" >

    <RelativeLayout
        android:id="@+id/rl_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="8dp" >

        <ImageView
            android:id="@+id/ivAdapterQuestionShareIcon"
            android:layout_width="@dimen/around_icon_head_size"
            android:layout_height="@dimen/around_icon_head_size"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/user_detail_head_icon" />

        <TextView
            android:id="@+id/tvQuestionShareName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="9dp"
            android:layout_toRightOf="@id/ivAdapterQuestionShareIcon"
            android:gravity="top"
            android:lineSpacingMultiplier="0.9"
            android:textColor="@color/color_blue"
            android:textSize="@dimen/text_size_less" />

        <RelativeLayout
            android:layout_alignParentRight="true"
            android:id="@+id/wenda_zan_linear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
            
           <TextView
                android:id="@+id/zan_num"
                android:layout_marginRight="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_less" />
            
           <CheckBox
                android:layout_marginTop="2dp"
                android:layout_alignTop="@id/zan_num"
                android:layout_toRightOf="@id/zan_num"
                android:id="@+id/zan_chk"
                android:layout_width="@dimen/around_icon_reply_height"
                android:layout_height="@dimen/around_icon_reply_height"
                android:background="@drawable/selector_around_credit"
                android:button="@null"
                />
            
        </RelativeLayout>

        <TextView
            android:id="@+id/tvQuestionShareContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/tvQuestionShareName"
            android:layout_below="@id/wenda_zan_linear"
            android:layout_marginTop="@dimen/offset_small"
            android:gravity="center_vertical"
            android:paddingRight="@dimen/offset_medium"
            android:textColor="@color/color_question_share_content"
            android:textSize="@dimen/text_size_list_subject" />

        <ImageView
            android:id="@+id/imgQuestionShare"
            android:layout_width="@dimen/icon_size_large"
            android:layout_height="@dimen/icon_size_large"
            android:layout_alignLeft="@id/tvQuestionShareContent"
            android:layout_below="@id/tvQuestionShareContent"
            android:layout_marginTop="@dimen/offset_small"
            android:scaleType="fitXY"
            android:visibility="gone" />
        
          <TextView
            android:layout_marginTop="@dimen/offset_less"
            android:layout_alignLeft="@id/tvQuestionShareContent"
            android:layout_below="@id/imgQuestionShare"
            android:id="@+id/tv_floor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_list_item_text_time"
            android:textSize="@dimen/text_size_small" 
            />
        
        <TextView
            android:layout_marginLeft="@dimen/offset_less"
            android:layout_toRightOf="@id/tv_floor"
            android:layout_marginTop="@dimen/offset_less"
            android:layout_below="@id/imgQuestionShare"
            android:id="@+id/tvQuestionShareDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_list_item_text_time"
            android:textSize="@dimen/text_size_small" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignLeft="@id/rl_main"
        android:layout_alignRight="@id/rl_main"
        android:layout_below="@id/rl_main"
        android:layout_marginLeft="@dimen/around_icon_head_size"
        android:layout_marginTop="5dp"
        android:background="@color/color_edit_line" />

</RelativeLayout>