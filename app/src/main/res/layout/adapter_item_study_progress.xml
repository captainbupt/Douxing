<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/offset_small"
        android:layout_marginLeft="@dimen/offset_medium"
        android:layout_marginRight="@dimen/offset_medium"
        android:layout_marginTop="@dimen/offset_small"
        android:background="@drawable/bg_radius_center_whtie"
        android:orientation="vertical"
        android:padding="@dimen/offset_less" >

        <TextView
            android:id="@+id/lv_item_study_subject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/color_user_center_textcolor_black"
            android:textSize="@dimen/text_size_less" />

        <TextView
            android:id="@+id/lv_item_study_dpt_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/offset_less"
            android:ellipsize="end"
            android:singleLine="true"
            android:text=""
            android:textColor="#a6a6a6"
            android:textSize="14sp" />
    </LinearLayout>

</LinearLayout>