<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/offset_small"
    android:paddingLeft="@dimen/offset_medium"
    android:paddingRight="@dimen/offset_medium"
    android:paddingTop="@dimen/offset_small">

    <EditText
        android:id="@+id/topic_edit_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/transparent"
        android:hint="@string/chatter_submit_topic_hint"
        android:maxEms="15"
        android:singleLine="true"
        android:textColor="@color/color_text_black"
        android:textSize="@dimen/text_size_medium" />

    <TextView
        android:id="@+id/topic_confirm_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/background_button_enable_blue"
        android:paddingLeft="@dimen/offset_less"
        android:paddingRight="@dimen/offset_less"
        android:text="@string/chatter_submit_topic_confirm"
        android:textColor="@color/color_button_text_blue"
        android:textSize="@dimen/text_size_medium" />
</LinearLayout>