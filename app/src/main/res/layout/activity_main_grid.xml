<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_layout_bg"
    android:orientation="vertical">

    <include layout="@layout/logo" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.badou.mworking.widget.BannerGallery
            android:id="@+id/gallery_main_banner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <RadioGroup
            android:id="@+id/rg_main_focus_indicator_container"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/offset_less"
            android:gravity="center"
            android:orientation="horizontal" />
    </RelativeLayout>

    <GridView
        android:id="@+id/gv_main_grid_second"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_margin="@dimen/offset_small"
        android:layout_weight="8"
        android:horizontalSpacing="@dimen/offset_less"
        android:numColumns="3"
        android:scrollbars="none"
        android:verticalSpacing="@dimen/offset_small"></GridView>
</LinearLayout>
