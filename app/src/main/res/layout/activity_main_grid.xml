<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fm_main_grid_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/ll_main_grid_content_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_layout_bg"
        android:orientation="vertical">

        <include layout="@layout/layout_main_title_bar" />

        <com.badou.mworking.widget.TopFadeScrollView
            android:id="@+id/tfsv_main_grid"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/rl_main_grid_banner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.badou.mworking.widget.BannerGallery
                        android:id="@+id/gallery_main_banner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <RadioGroup
                        android:id="@+id/rg_main_focus_indicator_container"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@id/gallery_main_banner"
                        android:layout_marginBottom="@dimen/offset_less"
                        android:gravity="center"
                        android:orientation="horizontal" />
                </RelativeLayout>

                <com.badou.mworking.widget.LineGridView
                    android:id="@+id/gv_main_grid_second"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/offset_small"
                    android:layout_marginRight="@dimen/offset_small"
                    android:numColumns="2"
                    android:scrollbars="none" />
            </LinearLayout>
        </com.badou.mworking.widget.TopFadeScrollView>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/fl_main_grid_fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</FrameLayout>
