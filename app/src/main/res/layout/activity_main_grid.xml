<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_layout_bg"
    android:orientation="vertical">

    <include layout="@layout/activity_main_title_bar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <org.holoeverywhere.widget.LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <org.holoeverywhere.widget.RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.badou.mworking.widget.BannerGallery
                    android:id="@+id/gallery_main_banner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <RadioGroup
                    android:id="@+id/rg_main_focus_indicator_container"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/gallery_main_banner"
                    android:layout_marginBottom="@dimen/offset_less"
                    android:gravity="center"
                    android:orientation="horizontal" />
            </org.holoeverywhere.widget.RelativeLayout>

            <com.badou.mworking.widget.LineGridView
                android:id="@+id/gv_main_grid_second"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/offset_small"
                android:layout_marginRight="@dimen/offset_small"
                android:numColumns="2"
                android:scrollbars="none" />
        </org.holoeverywhere.widget.LinearLayout>
    </ScrollView>
</LinearLayout>
