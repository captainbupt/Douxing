<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:myattr="http://schemas.android.com/apk/res/com.badou.mworking"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_layout_bg"
    android:orientation="vertical" >

   <com.handmark.pulltorefresh.library.PullToRefreshScrollView
        android:id="@+id/ptrs_activity_around_detail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        myattr:ptrMode="pullUpFromBottom" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_layout_bg"
                android:paddingBottom="@dimen/offset_medium"
                android:paddingLeft="@dimen/offset_medium"
                android:paddingRight="@dimen/offset_medium"
                android:paddingTop="@dimen/offset_medium" >

                <TextView
                    android:id="@+id/tvQuestionContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/tvQuestionName"
                    android:layout_below="@+id/tvQuestionName"
                    android:layout_marginBottom="@dimen/offset_small"
                    android:layout_marginTop="@dimen/offset_small"
                    android:text=""
                    android:textColor="@color/color_black"
                    android:textSize="@dimen/text_size_medium" />

                <RelativeLayout
                    android:id="@+id/imgTitle_relay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/tvQuestionContent"
                    android:layout_below="@id/tvQuestionContent" >

                    <ImageView
                        android:id="@+id/imgTitleAroundDetail"
                        android:layout_width="@dimen/icon_size_xlarge"
                        android:layout_height="@dimen/icon_size_xlarge"
                        android:layout_marginBottom="@dimen/offset_small"
                        android:layout_marginTop="@dimen/offset_lless"
                        android:background="@android:color/transparent" />

                    <ImageView
                        android:id="@+id/around_ditail_shiping_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:background="@drawable/tongshiquan_shiing"
                        android:scaleType="centerCrop"
                        android:visibility="gone" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/tvQuestionContent"
                    android:layout_below="@+id/imgTitle_relay"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/tv_time"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0"
                        android:paddingTop="@dimen/offset_small"
                        android:textColor="@color/color_list_item_text_time"
                        android:textSize="@dimen/text_size_small" />
                    
                    <TextView
                        android:id="@+id/sixin_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/offset_micro"
                        android:text="私信"
                        android:paddingRight="@dimen/offset_small"
                        android:textColor="@color/color_blue"
                        android:textSize="@dimen/text_size_small"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/tv_delete_comment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/offset_small"
                        android:text="@string/myQuan_dialog_del_tips"
                        android:textColor="@color/color_blue"
                        android:textSize="@dimen/text_size_small" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/iv_user_head_icon"
                    android:layout_width="@dimen/around_icon_head_size"
                    android:layout_height="@dimen/around_icon_head_size"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:src="@drawable/icon_user_detail_default_head" />

                <TextView
                    android:id="@+id/tvQuestionName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/iv_user_head_icon"
                    android:layout_marginLeft="9dp"
                    android:layout_toRightOf="@+id/iv_user_head_icon"
                    android:text=""
                    android:textColor="@color/color_blue"
                    android:textSize="@dimen/text_size_less" />
            </RelativeLayout>

            <com.badou.mworking.widget.NoScrollListView
                android:id="@+id/lvQuestionAnswers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:background="@drawable/bg_around_detail"
                android:paddingTop="12dp"
                android:visibility="gone" />
        </LinearLayout>
    </com.handmark.pulltorefresh.library.PullToRefreshScrollView>
 
      <include
          layout="@layout/layout_send_msg"
           />

</RelativeLayout>