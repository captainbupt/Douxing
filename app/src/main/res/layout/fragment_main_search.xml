<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/action_bar_img_size"
        android:background="@color/color_blue"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/offset_less"
        android:paddingLeft="@dimen/offset_medium"
        android:paddingRight="@dimen/offset_medium"
        android:paddingTop="@dimen/offset_less">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/background_corner_radius_small_ffffffff"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/iv_main_search_tip"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:paddingBottom="@dimen/offset_less"
                android:paddingTop="@dimen/offset_less"
                android:scaleType="centerInside"
                android:src="@drawable/button_title_main_search" />

            <EditText
                android:id="@+id/et_main_search_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:textColor="@color/color_text_black"
                android:textSize="@dimen/text_size_small" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_main_search_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/offset_less"
            android:text="@string/main_search_cancel"
            android:textColor="@color/color_white"
            android:textSize="@dimen/text_size_medium" />

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent">

        <LinearLayout
            android:id="@+id/ll_main_search_none"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingTop="@dimen/offset_xxlarge"
            android:visibility="gone">

            <TextView
                android:id="@+id/tv_main_search_none"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="@string/main_search_result_tip"
                android:textColor="@color/color_text_black"
                android:textSize="@dimen/text_size_medium" />

            <ImageView
                android:id="@+id/iv_main_search_none"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/offset_medium"
                android:src="@drawable/icon_main_search_tip" />
        </LinearLayout>

        <com.handmark.pulltorefresh.library.PullToRefreshListView
            android:id="@+id/ptrlv_main_search_results"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@color/color_grey"
            android:scrollbars="none"
            android:visibility="visible" />
    </FrameLayout>
</LinearLayout>