<?xml version="1.0" encoding="utf-8"?>
<org.holoeverywhere.widget.LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bg_grey"
    android:orientation="vertical"
    android:padding="@dimen/login_margin">

    <org.holoeverywhere.widget.TextView
        android:id="@+id/tv_forget_password_tips"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/act_forget_verify_top_tip"
        android:textColor="@color/color_text_black"
        android:textSize="@dimen/text_size_medium" />

    <org.holoeverywhere.widget.LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/offset_large"
        android:orientation="horizontal">

        <org.holoeverywhere.widget.EditText
            android:id="@+id/et_forget_passwrod_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/background_corner_radius_small_ffffffff"
            android:hint="@string/hint_input_phone"
            android:inputType="number"
            android:maxLength="11"
            android:paddingBottom="@dimen/offset_small"
            android:paddingLeft="@dimen/offset_medium"
            android:paddingRight="@dimen/offset_medium"
            android:paddingTop="@dimen/offset_small"
            android:textSize="@dimen/text_size_medium" />

        <org.holoeverywhere.widget.TextView
            android:id="@+id/tv_forget_password_get_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/offset_less"
            android:layout_weight="0"
            android:background="@drawable/background_button_disable"
            android:gravity="center"
            android:paddingBottom="@dimen/offset_small"
            android:paddingLeft="@dimen/offset_medium"
            android:paddingRight="@dimen/offset_medium"
            android:paddingTop="@dimen/offset_small"
            android:singleLine="true"
            android:text="@string/forget_password_get_code"
            android:textColor="@color/color_white"
            android:textSize="@dimen/text_size_medium" />
    </org.holoeverywhere.widget.LinearLayout>

    <org.holoeverywhere.widget.EditText
        android:id="@+id/et_forget_password_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/offset_medium"
        android:layout_marginTop="@dimen/offset_less"
        android:background="@drawable/background_corner_radius_small_ffffffff"
        android:gravity="center_vertical"
        android:hint="@string/hint_input_code"
        android:inputType="number"
        android:maxLength="6"
        android:paddingBottom="@dimen/offset_small"
        android:paddingLeft="@dimen/offset_medium"
        android:paddingRight="@dimen/offset_medium"
        android:paddingTop="@dimen/offset_small"
        android:textSize="@dimen/text_size_medium" />

    <org.holoeverywhere.widget.TextView
        android:id="@+id/tv_forget_password_next_step"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/offset_large"
        android:background="@drawable/background_button_disable"
        android:gravity="center"
        android:padding="@dimen/offset_small"
        android:text="@string/forget_password_button_next"
        android:textColor="@color/color_white"
        android:textSize="@dimen/text_size_medium" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <org.holoeverywhere.widget.TextView
            android:id="@+id/tv_forget_password_cannot_receive"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="center_horizontal"
            android:padding="@dimen/offset_less"
            android:text="@string/forget_passwrod_bottom_cannot_receive"
            android:textColor="@color/color_text_grey"
            android:textSize="@dimen/text_size_less" />
    </RelativeLayout>
</org.holoeverywhere.widget.LinearLayout>