<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:baselineAligned="false"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/offset_medium"
    android:paddingLeft="@dimen/offset_lless"
    android:paddingRight="@dimen/offset_lless"
    android:paddingTop="@dimen/offset_medium" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/offset_small" >

            <TextView
                android:id="@+id/tvMyCircleYear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/color_black"
                android:textSize="@dimen/text_size_xxlarge" />

            <TextView
                android:id="@+id/tvMyCircleMonth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/color_black"
                android:textSize="@dimen/text_size_small" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvMyCircleTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/offset_small"
            android:text=""
            android:textColor="@color/color_black"
            android:textSize="@dimen/text_size_small" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/offset_medium"
        android:layout_marginTop="@dimen/offset_micro"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tvMyCircleContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/offset_small"
            android:layout_toRightOf="@+id/imgUserQuestion_relay"
            android:lineSpacingExtra="@dimen/offset_micro"
            android:text=""
            android:textColor="@color/color_question_share_content"
            android:textSize="@dimen/text_size_less" />

        <TextView
            android:id="@+id/show_all_content_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/tvMyCircleContent"
            android:layout_below="@id/tvMyCircleContent"
            android:text="显示全文"
            android:textColor="@color/color_blue"
            android:textSize="@dimen/text_size_less"
            android:visibility="gone" />

        <RelativeLayout
            android:id="@+id/imgUserQuestion_relay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/offset_small"
            android:layout_marginTop="@dimen/offset_micro" >

            <ImageView
                android:id="@+id/imgUserQuestionShare"
                android:layout_width="@dimen/icon_size_xlarge"
                android:layout_height="@dimen/icon_size_xlarge"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:background="@android:color/transparent"
                android:scaleType="centerCrop"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/mygroup_shiping_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@drawable/tongshiquan_shiing"
                android:scaleType="centerCrop"
                android:visibility="gone" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/offset_less"
            android:gravity="center_vertical|right"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/offset_micro"
            android:visibility="gone" >

            <TextView
                android:id="@+id/tv_delete"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:singleLine="true"
                android:text="@string/myQuan_dialog_del_tips"
                android:textColor="@color/color_list_item_text_time"
                android:textSize="@dimen/text_size_small" />

            <TextView
                android:id="@+id/type_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/offset_small"
                android:textColor="@color/color_blue"
                android:textSize="@dimen/text_size_small" />

            <ImageView
                android:layout_width="@dimen/around_icon_reply_width"
                android:layout_height="@dimen/around_icon_reply_height"
                android:layout_marginRight="@dimen/offset_small"
                android:scaleType="centerInside"
                android:src="@drawable/question_share_answer"
                android:visibility="visible" />

            <TextView
                android:id="@+id/tvMyCircleNum"
                android:layout_width="@dimen/around_comment_num_width"
                android:layout_height="wrap_content"
                android:text="199"
                android:textColor="@color/color_list_item_text_time"
                android:textSize="@dimen/text_size_small"
                android:visibility="visible" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>