<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_layout_bg">
 
   <include
        android:id="@+id/acionbar_lay"
        layout="@layout/actionbar" />
     
     <com.handmark.pulltorefresh.library.PullToRefreshListView
        android:layout_marginTop="@dimen/offset_lless"
        android:layout_below="@id/acionbar_lay"
        android:id="@+id/PullToRefreshListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@color/color_layout_bg"
        android:scrollbars="none"
        android:visibility="visible" 
        /> 

    <ImageView
        android:id="@+id/tv_tishi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/no_content"
        android:visibility="gone"
        />
    
    <LinearLayout
        android:layout_below="@id/acionbar_lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
       
    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/activity_shoplist" 
        android:visibility="gone"
        />
    
     <View
        android:layout_below="@id/acionbar_lay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible"
        android:background="@color/color_layout_bg"
        />
 </LinearLayout>

</RelativeLayout>