<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:myattr="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/height_title_bar"
    android:background="@color/color_bg_grey">

    <ImageView
        android:id="@+id/user_center_image_view"
        android:layout_width="@dimen/height_title_bar"
        android:layout_height="@dimen/height_title_bar"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:padding="@dimen/offset_less"
        android:scaleType="centerInside"
        android:src="@drawable/button_title_main_user"/>

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/logo_image_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_title_bar"
        android:layout_centerInParent="true"
        android:paddingBottom="@dimen/offset_lless"
        android:paddingTop="@dimen/offset_lless"
        myattr:actualImageScaleType="fitCenter"
        myattr:placeholderImage="@drawable/logo"
        myattr:placeholderImageScaleType="fitCenter"/>

    <ImageView
        android:id="@+id/message_center_image_view"
        android:layout_width="@dimen/height_title_bar"
        android:layout_height="@dimen/height_title_bar"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:padding="@dimen/offset_less"
        android:scaleType="centerInside"
        android:src="@drawable/button_title_main_message_unchecked"/>

    <ImageView
        android:id="@+id/search_image_view"
        android:layout_width="@dimen/height_title_bar"
        android:layout_height="@dimen/height_title_bar"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/message_center_image_view"
        android:paddingBottom="@dimen/offset_lless"
        android:paddingLeft="@dimen/offset_small"
        android:paddingRight="@dimen/offset_small"
        android:paddingTop="@dimen/offset_lless"
        android:scaleType="centerInside"
        android:src="@drawable/button_title_main_search"/>

</RelativeLayout>
