<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id='@+id/logo_bg'
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_bg_grey">

    <ImageView
        android:id="@+id/iv_actionbar_left"
        android:layout_width="@dimen/actionBar_img_size"
        android:layout_height="@dimen/actionBar_img_size"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:padding="@dimen/offset_less"
        android:scaleType="centerInside"
        android:src="@drawable/button_main_user" />

    <ImageView
        android:id="@+id/icon_top"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/actionBar_img_size"
        android:layout_centerInParent="true"
        android:scaleType="centerInside" />

    <ImageView
        android:id="@+id/iv_actionbar_right"
        android:layout_width="@dimen/actionBar_img_size"
        android:layout_height="@dimen/actionBar_img_size"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:padding="@dimen/offset_less"
        android:scaleType="centerInside"
        android:src="@drawable/button_main_search" />

</RelativeLayout>