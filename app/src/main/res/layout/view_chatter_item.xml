<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:myattr="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_white"
    android:orientation="horizontal"
    android:padding="@dimen/offset_medium">

    <!-- 同事圈的列表 item -->

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/head_image_view"
        android:layout_width="@dimen/icon_head_size_middle"
        android:layout_height="@dimen/icon_head_size_middle"
        android:layout_marginRight="@dimen/offset_less"
        myattr:actualImageScaleType="centerInside"
        myattr:placeholderImage="@drawable/icon_user_detail_default_head"
        myattr:placeholderImageScaleType="centerInside"
        myattr:roundAsCircle="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/name_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_text_grey"
                android:textSize="@dimen/text_size_medium"/>

            <com.badou.mworking.widget.LevelTextView
                android:id="@+id/level_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/offset_small"
                android:textColor="#ffffff"
                android:textSize="@dimen/text_size_small"/>
        </LinearLayout>

        <com.badou.mworking.widget.TextViewFixTouchConsume
            android:id="@+id/content_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/offset_small"
            android:lineSpacingExtra="@dimen/offset_small"
            android:textColor="@color/color_text_black"
            android:textSize="@dimen/text_size_medium"/>

        <TextView
            android:id="@+id/full_content_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tips_full_content"
            android:textColor="@color/color_blue"
            android:textSize="@dimen/text_size_less"
            android:visibility="gone"/>

        <com.badou.mworking.widget.VideoImageView
            android:id="@+id/video_image_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/offset_small"/>

        <com.badou.mworking.widget.MultiImageShowGridView
            android:id="@+id/image_grid_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/offset_small"/>

        <com.badou.mworking.widget.ChatterUrlView
            android:id="@+id/url_content_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/offset_small"/>

        <TextView
            android:id="@+id/save_internet_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/offset_small"
            android:text="@string/tips_save_internet"
            android:textColor="@color/color_grey"
            android:textSize="@dimen/text_size_less"
            android:visibility="gone"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/offset_small"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/time_text_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/color_text_grey"
                android:textSize="@dimen/text_size_less"/>

            <ImageView
                android:id="@+id/praise_image_view"
                android:layout_width="@dimen/around_icon_reply_width"
                android:layout_height="@dimen/around_icon_reply_height"
                android:src="@drawable/icon_praise_unchecked"/>

            <TextView
                android:id="@+id/praise_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:minEms="1"
                android:singleLine="true"
                android:textColor="@color/color_text_blue"
                android:textSize="@dimen/text_size_less"/>


            <ImageView
                android:id="@+id/reply_image_view"
                android:layout_width="@dimen/around_icon_reply_width"
                android:layout_height="@dimen/around_icon_reply_height"
                android:layout_marginLeft="@dimen/offset_less"
                android:background="@drawable/icon_bottom_comment"
                android:scaleType="centerInside"/>

            <TextView
                android:id="@+id/reply_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:minEms="1"
                android:singleLine="true"
                android:textColor="@color/color_text_blue"
                android:textSize="@dimen/text_size_less"/>

            <TextView
                android:id="@+id/message_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/offset_micro"
                android:singleLine="true"
                android:text="@string/operation_message"
                android:textColor="@color/color_blue"
                android:textSize="@dimen/text_size_less"/>

            <TextView
                android:id="@+id/delete_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/offset_less"
                android:padding="@dimen/offset_micro"
                android:singleLine="true"
                android:text="@string/operation_delete"
                android:textColor="@color/color_blue"
                android:textSize="@dimen/text_size_less"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>