<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/iv_adapter_main_grid"
        android:layout_width="@dimen/icon_size_main_grid_category"
        android:layout_height="@dimen/icon_size_main_grid_category"
        android:scaleType="fitXY"
        android:src="@drawable/icon_default"
         />
    
    <TextView 
        android:id="@+id/tv_adapter_main_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#3d3d3d"
        android:textSize="@dimen/text_size_less"
        android:gravity="center_horizontal"
        android:layout_alignBottom="@+id/iv_adapter_main_grid"
        android:layout_alignLeft="@+id/iv_adapter_main_grid"
        android:layout_alignRight="@+id/iv_adapter_main_grid"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_marginBottom="@dimen/offset_lless"
        />

    <TextView
        android:id="@+id/tv_main_item_unreadNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/main_gv_item_unread_margin_t"
        android:layout_marginRight="@dimen/main_gv_item_unread_margin_r"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/iv_adapter_main_grid"
        android:background="@drawable/icon_chat_unread"
        android:gravity="center"
        android:text="99"
        android:textColor="@android:color/white"
        android:visibility="gone"
         />
    
</RelativeLayout>