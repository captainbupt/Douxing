<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/offset_medium">

    <LinearLayout
        android:id="@+id/ll_adapter_main_grid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_adapter_main_grid"
            android:layout_width="@dimen/icon_size_main_grid_category"
            android:layout_height="@dimen/icon_size_main_grid_category"
            android:layout_gravity="center_horizontal"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/tv_adapter_main_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/offset_medium"
            android:singleLine="true"
            android:textColor="@color/color_text_grey"
            android:textSize="@dimen/text_size_medium" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_main_item_unreadNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/ll_adapter_main_grid"
        android:background="@drawable/icon_chat_unread"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:visibility="gone" />
    <!--        android:layout_marginRight="@dimen/main_gv_item_unread_margin_r"
            android:layout_marginTop="@dimen/main_gv_item_unread_margin_t"-->

</RelativeLayout>