<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="DiallogStyle" parent="@android:style/Theme.Dialog">
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:background">@color/transparent</item>
    </style>

    <style name="ll_account_manager_input">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingBottom">@dimen/offset_less</item>
        <item name="android:paddingTop">@dimen/offset_less</item>
        <item name="android:background">@color/color_white</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="iv_account_manager_input">
        <item name="android:scaleType">centerInside</item>
        <item name="android:layout_width">@dimen/account_manager_image_size</item>
        <item name="android:layout_height">@dimen/account_manager_image_size</item>
        <item name="android:layout_marginLeft">@dimen/offset_less</item>
        <item name="android:layout_marginRight">@dimen/offset_less</item>
    </style>

    <style name="tv_account_manager_input">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">@dimen/offset_small</item>
        <item name="android:textColor">@color/color_change_password</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>

    <style name="et_account_manager_input">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/color_text_black</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:background">@null</item>
        <item name="android:inputType">textPassword</item>
    </style>

    <style name="MyTheme.NoTitleBar.CustomBackground" parent="android:Theme.Light">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <!-- progress的颜色 -->
    <style name="ProgressBarUserCenter" parent="Holo.ProgressBar.Horizontal">
        <item name="android:maxHeight">50dip</item>
        <item name="android:minHeight">8dip</item>
        <item name="android:indeterminateOnly">false</item>
        <item name="android:indeterminateDrawable">
            @android:drawable/progress_indeterminate_horizontal
        </item>
        <item name="android:progressDrawable">@drawable/progressbar_mini</item>
    </style>

    <!-- 星星评分 -->
    <style name="trainingRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/myratingbar</item>
        <item name="android:minHeight">12dip</item>
        <item name="android:maxHeight">12dip</item>
    </style>

    <style name="DialogRatingBarStyle" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/coursewarescorerrb</item>
        <item name="android:minHeight">45dip</item>
        <item name="android:maxHeight">45dip</item>
    </style>

    <!-- 考试的 dialog -->
    <style name="dialog_Translucent_NoTitle" parent="android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">#00000000</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <!-- 个人中心 下发的layout -->
    <style name="styleUser_center_item_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">@dimen/offset_medium</item>
        <item name="android:paddingLeft">@dimen/offset_medium</item>
        <item name="android:paddingRight">@dimen/offset_small</item>
        <item name="android:paddingTop">@dimen/offset_medium</item>
    </style>

    <style name="update_progress_style">
        　　
        <item name="android:indeterminateDrawable">@drawable/update_progress</item>
        　　
        <item name="android:minWidth">20dip</item>
        　　
        <item name="android:maxWidth">20dip</item>
        　　
        <item name="android:minHeight">20dip</item>
        　　
        <item name="android:maxHeight">20dip</item>
    </style>

</resources>