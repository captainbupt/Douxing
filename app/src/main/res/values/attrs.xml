<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="SwipeLayout">
        <attr name="drag_edge" format="enum">
            <enum name="left" value="0" />
            <enum name="right" value="1" />
            <enum name="top" value="2" />
            <enum name="bottom" value="3" />
        </attr>
        <attr name="show_mode" format="enum">
            <enum name="lay_down" value="0" />
            <enum name="pull_out" value="1" />
        </attr>
    </declare-styleable>

    <!-- mine -->
    <declare-styleable name="NoScrollListView">
        <attr name="dividerHeight" format="dimension" />
        <attr name="dividerColor" format="color" />
    </declare-styleable>
    <declare-styleable name="BottomSendMessageView">
        <attr name="minText" format="integer" />
        <attr name="maxText" format="integer" />
        <attr name="submitText" format="reference" />
        <attr name="contentHint" format="reference" />
    </declare-styleable>
    <declare-styleable name="OptimizedImageView">
        <attr name="imgUrl" format="string" />
        <attr name="imgSrc" format="fraction" />
    </declare-styleable>
    <declare-styleable name="MultiImageEditGridView">
        <attr name="maxImg" format="integer" />
    </declare-styleable>
</resources>