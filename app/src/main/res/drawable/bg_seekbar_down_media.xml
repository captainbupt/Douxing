<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- 背景 -->
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="5dip" />
<!--  <stroke android:width="6dp" android:color="@android:color/transparent" 
                android:dashWidth="1dp" android:dashGap="1dp"   
                     />-->
            <gradient
                android:width="6dp"
                android:angle="270"
                android:centerColor="@color/color_seekBG_grey"
                android:centerY="0.3"
                android:endColor="@color/color_seekBG_grey"
                android:startColor="@color/color_seekBG_grey" />
            
            
        </shape>
    </item>
    <!-- 第二进度条 -->
    <item android:id="@android:id/secondaryProgress">
        <clip >
            <shape >
                <corners android:radius="5dip" />
<!--  -->
                <gradient
                    android:width="6dp"
                    android:angle="270"
                    android:centerColor="@color/color_seekBG_blue"
                    android:centerY="0.3"
                    android:endColor="@color/color_seekBG_blue"
                    android:startColor="@color/color_seekBG_blue" />
            </shape>
        </clip>
    </item>
    <!-- 第一进度条 -->
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="5dip" />
				<!-- 渐变 -->
                <gradient
                    android:width="6dp"
                    android:angle="270"
                    android:centerColor="@color/color_seekBG_Light_blue"
                    android:centerY="0.3"
                    android:endColor="@color/color_seekBG_Light_blue"
                    android:startColor="@color/color_seekBG_Light_blue" />
            </shape>
        </clip>
    </item>

</layer-list>