<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="CircleProgressView">
        <!-- Text-->
        <attr name="text" format="string"/>
        <attr name="unit" format="string"/>
        <attr name="textColor" format="color"/>
        <attr name="unitColor" format="color"/>
        <attr name="showUnit" format="boolean"/>
        <attr name="textSize" format="dimension"/>
        <attr name="unitSize" format="dimension"/>
        <attr name="textScale" format="float"/>
        <attr name="unitScale" format="float"/>
        <attr name="autoTextColor" format="boolean"/>
        <attr name="autoTextSize" format="boolean"/>
        <attr name="textMode"/>

        <!-- Progress Bar -->
        <attr name="maxValue" format="float"/>
        <attr name="barWidth" format="dimension"/>
        <attr name="barColor" format="color"/>
        <attr name="barColor1" format="color"/>
        <attr name="barColor2" format="color"/>
        <attr name="barColor3" format="color"/>
        <attr name="startAngle" format="integer"/>

        <!-- Spinner-->
        <attr name="spinColor" format="color"/>
        <attr name="spinSpeed" format="float"/>
        <attr name="spinBarLength" format="float"/>
        <attr name="showTextInSpinningMode" format="boolean"/>

        <!-- Rim-->
        <attr name="rimColor" format="color"/>
        <attr name="rimWidth" format="dimension"/>

        <!-- Contour-->
        <attr name="contourColor" format="color"/>
        <attr name="contourSize" format="dimension"/>

        <!-- Background color-->
        <attr name="solidColor" format="color"/>

        <!-- Seek mode-->
        <attr name="seekMode" format="boolean"/>

        <!-- Block -->
        <attr name="blockCount" format="integer"/>
        <attr name="blockScale" format="float"/>

    </declare-styleable>
    <attr name="textMode" format="enum">
        <enum name="Text" value="0"/>
        <enum name="Percent" value="1"/>
        <enum name="Value" value="2"/>
    </attr>
</resources>
